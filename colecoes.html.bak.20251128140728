    <!-- Toast Notification -->
    <div id="toast" class="toast">
        <span id="toast-message">Produto adicionado ao carrinho!</span>
    </div>

    <script>
        // Cart functionality
        let cart = JSON.parse(localStorage.getItem('cart')) || [];
        let wishlist = JSON.parse(localStorage.getItem('wishlist')) || [];

        function saveWishlist() {
            localStorage.setItem('wishlist', JSON.stringify(wishlist));
        }

        function isInWishlist(id) {
            return wishlist.some(item => item.id === id);
        }

        function buildProductData(card) {
            const id = card.dataset.id || card.dataset.productId || card.querySelector('.add-to-cart')?.dataset.product || '';
            const name = card.querySelector('h3, h4')?.textContent?.trim() || 'Produto';
            const priceAttr = card.querySelector('.add-to-cart')?.dataset.price || card.dataset.price || '0';
            const price = parseFloat(priceAttr) || 0;
            const image = card.querySelector('.relative img')?.getAttribute('src') || '';

            return { id, name, price, image };
        }

        function attachWishlistButtons() {
            document.querySelectorAll('.product-item').forEach(card => {
                const imageWrapper = card.querySelector('.relative');
                if (!imageWrapper || imageWrapper.querySelector('.wishlist-toggle')) return;

                const button = document.createElement('button');
                button.type = 'button';
                button.className = 'wishlist-toggle absolute top-3 left-3 bg-white/90 hover:bg-white text-gray-500 hover:text-red-500 rounded-full p-2 shadow transition duration-300';
                button.innerHTML = '<i class="far fa-heart"></i>';
                imageWrapper.appendChild(button);
            });
        }

        function updateWishlistButtons() {
            document.querySelectorAll('.product-item .wishlist-toggle').forEach(button => {
                const card = button.closest('.product-item');
                if (!card) return;
                const productId = card.dataset.id || card.querySelector('.add-to-cart')?.dataset.product || '';
                const icon = button.querySelector('i');
                const active = isInWishlist(productId);
                if (active) {
                    button.classList.add('text-red-500');
                    button.classList.remove('text-gray-500');
                    icon?.classList.remove('far');
                    icon?.classList.add('fas');
                } else {
                    button.classList.remove('text-red-500');
                    button.classList.add('text-gray-500');
                    icon?.classList.remove('fas');
                    icon?.classList.add('far');
                }
            });
        }

        function toggleWishlist(product) {
            if (!product.id) return;
            if (isInWishlist(product.id)) {
                wishlist = wishlist.filter(item => item.id !== product.id);
                saveWishlist();
                updateWishlistButtons();
                showToast('Produto removido da lista de desejos.');
            } else {
                wishlist.push(product);
                saveWishlist();
                updateWishlistButtons();
                showToast('Produto adicionado à lista de desejos!');
            }
        }

        // Update cart count
        function updateCartCount() {
            const cartCount = document.getElementById('cart-count');
            cartCount.textContent = cart.length;
        }

        // Show toast notification
        function showToast(message) {
            const toast = document.getElementById('toast');
            const toastMessage = document.getElementById('toast-message');
            toastMessage.textContent = message;
            
            // Remove any existing show class first
            toast.classList.remove('show');
            
            // Force a reflow to ensure the transition works
            toast.offsetHeight;
            
            // Add show class
            toast.classList.add('show');
            
            // Hide after 3 seconds
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // Inject admin products from localStorage (admin_products)
        (function injectAdminProducts(){
            try {
                const saved = JSON.parse(localStorage.getItem('admin_products')) || [];
                if (!saved.length) return;
                const grid = document.getElementById('products-grid');
                const fragment = document.createDocumentFragment();
                saved.forEach(p => {
                    const item = document.createElement('div');
                    item.className = 'product-item jewel-hover bg-white rounded-lg overflow-hidden shadow-md';
                    item.setAttribute('data-id', p.id);
                    item.setAttribute('data-price', p.price);
                    item.setAttribute('data-category', (p.categories || '').trim());
                    item.innerHTML = `
                        <div class="relative h-64 product-image">
                            <img src="${p.image}" alt="${p.name}" class="w-full h-full object-contain p-2">
                            ${p.badge ? `<div class=\"absolute top-4 right-4 bg-yellow-600 text-white text-xs font-bold px-3 py-1 rounded-full\">${p.badge}</div>` : ''}
                        </div>
                        <div class="p-6">
                            <h3 class="title-font text-xl font-bold text-gray-800 mb-2">${p.name}</h3>
                            <p class="text-gray-600 mb-4">${p.desc || ''}</p>
                            <div class="flex justify-between items-center mb-4">
                                <span class="text-yellow-600 font-bold text-lg">R$ ${Number(p.price).toLocaleString('pt-BR', {minimumFractionDigits: 2})}</span>
                                <div class="flex text-yellow-400">
                                    <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i>
                                </div>
                            </div>
                            <button class="add-to-cart w-full bg-yellow-600 hover:bg-yellow-700 text-white font-bold py-3 px-4 rounded-lg transition duration-300" data-product="${p.id}" data-price="${p.price}">Adicionar ao Carrinho</button>
                        </div>`;
                    fragment.appendChild(item);
                });
                if (grid) {
                    grid.insertBefore(fragment, grid.firstChild);
                    attachWishlistButtons();
                    updateWishlistButtons();
                }
            } catch(e) {}
        })();

        // Filter functionality
        const filterButtons = document.querySelectorAll('.filter-btn');
        const productItems = document.querySelectorAll('.product-item');
        const hiddenSet = new Set((JSON.parse(localStorage.getItem('hidden_products')) || []));

        filterButtons.forEach(button => {
            button.addEventListener('click', () => {
                // Remove active class from all buttons
                filterButtons.forEach(btn => {
                    btn.classList.remove('filter-active');
                    btn.classList.remove('bg-yellow-600', 'text-white', 'border-yellow-600');
                    btn.classList.add('border-gray-300', 'text-gray-600');
                });

                // Add active class to clicked button
                button.classList.add('filter-active');

                const filter = button.dataset.filter;

                productItems.forEach(item => {
                    const isHidden = hiddenSet.has(item.dataset.id);
                    if (isHidden) { item.style.display = 'none'; return; }
                    if (filter === 'all') {
                        item.style.display = 'block';
                    } else {
                        const categories = (item.dataset.category || '').split(' ');
                        item.style.display = categories.includes(filter) ? 'block' : 'none';
                    }
                });
            });
        });

        // Add to cart functionality (delegate to handle injected buttons)
        document.addEventListener('click', function(e) {
            const wishlistBtn = e.target.closest('.wishlist-toggle');
            if (wishlistBtn) {
                const card = wishlistBtn.closest('.product-item');
                if (card) {
                    const productData = buildProductData(card);
                    toggleWishlist(productData);
                }
                return;
            }

            const btn = e.target.closest('.add-to-cart');
            if (!btn) return;
            const product = btn.dataset.product;
            const price = parseFloat(btn.dataset.price);
            cart.push({
                id: product,
                name: btn.closest('.jewel-hover').querySelector('h3').textContent,
                price: price,
                quantity: 1
            });
            localStorage.setItem('cart', JSON.stringify(cart));
            updateCartCount();
            showToast('Produto adicionado ao carrinho!');
            btn.textContent = 'Adicionado!';
            btn.classList.add('bg-green-600');
            setTimeout(() => { btn.textContent = 'Adicionar ao Carrinho'; btn.classList.remove('bg-green-600'); }, 2000);
        });

        // Mobile menu functionality
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('open');
        });

        // Close mobile menu when clicking outside
        document.addEventListener('click', (e) => {
            if (!mobileMenu.contains(e.target) && !mobileMenuButton.contains(e.target)) {
                mobileMenu.classList.remove('open');
            }
        });

        // Newsletter form
        document.getElementById('newsletter-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const email = this.querySelector('input[type="email"]').value;
            
            // Simulate newsletter subscription
            showToast('Newsletter assinada com sucesso!');
            this.reset();
        });

        // Initialize cart count and apply hidden list once on load
        updateCartCount();
        (function applyHiddenOnLoad(){
            const hidden = new Set((JSON.parse(localStorage.getItem('hidden_products')) || []));
            document.querySelectorAll('.product-item').forEach(item => {
                if (hidden.has(item.dataset.id)) item.style.display = 'none';
            });
        })();

        attachWishlistButtons();
        updateWishlistButtons();

        // Search overlay
        (function() {
            const openBtn = document.getElementById('search-button');
            const overlay = document.getElementById('search-overlay');
            const closeBtn = document.getElementById('search-close');
            const input = document.getElementById('site-search-input');

            function openOverlay() {
                overlay.classList.remove('hidden');
                overlay.classList.add('flex');
                setTimeout(() => input && input.focus(), 50);
            }
            function closeOverlay() {
                overlay.classList.add('hidden');
                overlay.classList.remove('flex');
            }
            if (openBtn && overlay) {
                openBtn.addEventListener('click', openOverlay);
            }
            if (closeBtn) closeBtn.addEventListener('click', closeOverlay);
            overlay && overlay.addEventListener('click', (e) => { if (e.target === overlay) closeOverlay(); });
            document.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeOverlay(); });
            input && input.addEventListener('keydown', (e) => {
                if (e.key === 'Enter') {
                    const q = input.value.trim();
                    if (q) {
                        window.location.href = `colecoes.html?q=${encodeURIComponent(q)}`;
                    }
                }
            });
        })();
    </script>
</body>
</html>
